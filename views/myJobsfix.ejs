<body>
    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
        <div class="d-flex align-items-center justify-content-between">
            <a href="index.html" class="logo d-flex align-items-center">
                <img src="/img/logo.png" alt="" />
                <span class="d-none d-lg-block">NiceAdmin</span>
            </a>
        </div>
        <!-- End Logo -->

        <div class="search-bar">
            <form class="search-form d-flex align-items-center" method="POST" action="/home/profil">
                <input type="text" name="query" placeholder="Search" title="Enter search keyword" />
                <button type="submit" title="Search">
                    <i class="bi bi-search"></i>
                </button>
            </form>
        </div>
        <!-- End Search Bar -->

        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">
                <li class="nav-item d-block d-lg-none">
                    <a class="nav-link nav-icon search-bar-toggle" href="#">
                        <i class="bi bi-search"></i>
                    </a>
                </li>
                <!-- End Search Icon-->
                <div class="job-application-status">
                    <a class="nav-link active" aria-current="page" href="#">Status Lamaran</a>
                </div>

                <div class="job-application-status">
                    <a class="nav-link active" aria-current="page" href="#">All Jobs</a>
                </div>


                <li class="nav-item dropdown pe-3">
                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <img src="/img/profile-img.jpg" alt="Profile" class="rounded-circle" />
                        <span class="d-none d-md-block ps-2">
                            <%= jobs.sessionUser %>
                        </span> </a><!-- End Profile Iamge Icon -->


                    <!-- End Profile Dropdown Items -->
                </li>
                <!-- End Profile Nav -->
            </ul>
        </nav>
        <!-- End Icons Navigation -->
    </header>
    <!-- End Header -->

    <div style="margin-top: 40px;padding-top: 30px;"></div>
    <!-- Recent Sales -->
    <div class="col-12">
        <div class="card recent-sales overflow-auto">

            <div class="card-body">

                <table class="table table-borderless datatable">
                    <thead>
                        <tr>
                            <th scope="col">Tittle</th>
                            <th scope="col">Name</th>
                            <th scope="col">Salary</th>
                            <th scope="col">Experience</th>
                            <th scope="col">Location</th>
                            <th scope="col">Descriprion</th>
                            <th scope="col">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (!jobs) { %>
                            <p>Tidak ada pelamar saat ini.</p>
                            <% } else { %>
                                <% jobs.forEach(function (job){ %>
                                    <tr>
                                        <th scope="row">
                                            <%= job.tittle %>
                                        </th>
                                        <td>
                                            <%= job.name %>
                                        </td>
                                        <td>
                                            <%= job.salary_min %> - <%= job.salary_max %>
                                        </td>
                                        <td>
                                            <%= job.exp %>
                                        </td>
                                        <td>
                                            <%= job.location %>
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-warning" data-bs-toggle="modal"
                                                data-bs-target="#modalDialogScrollable">
                                                Description
                                            </button>
                                            <div class="modal fade" id="modalDialogScrollable" tabindex="-1">
                                                <div class="modal-dialog modal-dialog-scrollable">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Description</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <%= job.desc %>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="col mb-3">
                                                <form method="POST" action="/home/myJobs">
                                                    <% if (!job.is_done) { %>
                                                        <button class="btn btn-primary" name="job_id"
                                                            value="<%= job.job_id %>" type="submit">Mark as
                                                            Done</button>
                                                        <% } else if (job.is_done) {%>
                                                            <button class="btn btn-success" name="job_id"
                                                                value="<%= job.job_id %>" type="submit">Make
                                                                Active</button>
                                                            <% } %>
                                            </div>
                                        </td>

                                    </tr>
                                    <% });} %>
                    </tbody>
                </table>

            </div>

        </div>
    </div><!-- End Recent Sales -->


    <!-- End Profile Edit Form -->
    </div>

    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; Copyright <strong><span>NiceAdmin</span></strong>. All Rights Reserved
        </div>
