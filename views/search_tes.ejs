<!DOCTYPE html>
<html>
<head>
  <title>ALL JOBS</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <style>
    body {
      background-color: #222;
      color: #fff;
    }

    .navbar {
      background-color: #333;
    }

    .navbar-brand, 
    .navbar-nav .nav-link {
      color: #fff;
    }

    .card {
      background-color: #333;
      color: #fff;
      margin-bottom: 20px;
    }

    .card-header {
      background-color: #444;
    }

    .btn-primary, 
    .btn-danger {
      background-color: #007bff;
      border-color: #007bff;
    }

    .btn-primary:hover, 
    .btn-danger:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }

    .btn-link {
      color: #007bff;
    }

    .btn-link:hover {
      color: #0056b3;
    }

    .welcome-message {
      background-color: #333;
      padding: 10px;
      text-align: center;
    }

    .welcome-message h2 {
      margin: 0;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark">
    <a class="navbar-brand" href="#"><i class="fas fa-envelope"></i> Inbox</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="#"><i class="fas fa-home"></i> My Jobs</a>
        </li>
        <li class="nav-item">
          <form class="form-inline my-2 my-lg-0" action="/home/search" method="POST">
            <input name="search" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-primary my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
          </form>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#"><i class="fas fa-user"></i> Nama Akun</a>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Sapaan Selamat Datang -->
  <div class="welcome-message">
    <h2>HASIL JOB SEARCHING</h2>
  </div>

  <!-- Konten -->
  <div class="container mt-4">
    <% jobs.forEach(function(job) { %>
    <div class="card">
      <div class="card-header">
        <h5 class="card-title"> <%= job.tittle %></h5>
      </div>
      <div class="card-body">
        <p class="card-text">Lokasi :<%= job.location %></p>
        <p class="card-text">Gaji :<%= job.salary_min %> - <%= job.salary_max %></p>
        <div class="accordion" id="pengalamanAccordion">
          <div class="card">
            <div class="card-header" id="pengalamanHeading">
              <h2 class="mb-0">
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#pengalamanCollapse" aria-expanded="true" aria-controls="pengalamanCollapse">
                  <%= job.desc %>
                </button>
              </h2>
            </div>
            <div id="pengalamanCollapse" class="collapse" aria-labelledby="pengalamanHeading" data-parent="#pengalamanAccordion">
              <div class="card-body">
              </div>
            </div>
          </div>
        </div>
        <button class="btn btn-primary">Accept</button>
        <button class="btn btn-danger">Deadline</button>
      </div>
    </div>
    <% }); %>

    <!-- Tambahkan card lainnya di sini -->

  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
