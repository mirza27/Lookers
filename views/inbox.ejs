<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>HOMEPAGE</title>
  <link rel="stylesheet" href="/css/tryinbox.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
  <style>
    body {
      overflow: auto;
    }

    .popup {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background-color: white;
      padding: 20px;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
      z-index: 9999;
    }

    .backdrop {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      z-index: 9998;
      display: none;
    }
  </style>
</head>

<body>
  <div class="menu-btn">
    <i class="fas fa-bars fa-2x"></i>
  </div>

  <div class="container">
    <!-- Nav -->
    <nav class="main-nav">
      <img src="https://i.ibb.co/wwLhz98/logo.png" alt="Microsoft" class="logo" />

      <ul class="main-menu">
        <li><a  href="/home/inbox">Inbox</a></li>
        <li><a  href="/home/myJobs">My Jobs</a></li>
        <li><a  href="/home/addJobs">Add Jobs</a></li>
      </ul>

      <div class="search-form">
        <input type="text" placeholder="Cari" />
        <button><i style="margin-right: 400px ;" class="fas fa-search"></i></button>
      </div>

      <ul class="right-menu">
        <li>
        <li><a href="#">Nama Perusahaan</a></li>
        <a href="#">
          <i class="fas fa-phone-square"></i>
        </a>
        </li>
      </ul>
    </nav>

    <div class="inbox">
      <h2>INBOX</h2>
    </div>
    <!--CARD-->

    <% if (!applicants) { %>
      <p>Tidak ada pelamar saat ini.</p>
    <% } else { %>
      <% applicants.forEach(function(applicant) { %>

          <div class="cookie-card">
            <span class="title">
              Nama Pekerjaan : <%= applicant.tittle %> 
            </span>
            <p class="description"><strong>Nama Pelamar:</strong>
              <%= applicant.name %>
            </p>
            <p class="description"><strong>Education:</strong>
              <%= applicant.education %> <strong>Pengalaman:</strong>  <%= applicant.exp %>
            </p>
            <button class="pref" onclick="showPopup()">Tampilkan Lebih Banyak</button>

            <div class="popup" id="popup">
              <h2 class="title" style="color: black;">Experience</h2>
              <p class="description" style="color: black;"><strong>Experience:</strong>
                <%= applicant.experience%>
              </p>
              <button class="pref" onclick="hidePopup()">Close</button>
            </div>
            <div class="accept-reject">
              <button class="accept">
                Accept
              </button>
              <button class="reject">
                Reject
              </button>
            </div>
            <div class="backdrop" id="backdrop"></div>
          </div>
      <% }); %>
    <% } %>

      <!-- Footer -->
      <footer class="footer">
        <div class="footer-inner">
          <div><i class="fas fa-globe fa-2x"></i> English (United States)</div>
          <ul>
            <li><a href="#">Sitemap</a></li>
            <li><a href="#">Contact Microsoft</a></li>
            <li><a href="#">Privacy & cookies</a></li>
            <li><a href="#">Terms of use</a></li>
            <li><a href="#">Trademarks</a></li>
            <li><a href="#">Safety & eco</a></li>
            <li><a href="#">About our ads</a></li>
            <li><a href="#">&copy; Microsoft 2020</a></li>
          </ul>
        </div>
      </footer>

      <script>
        const popup = document.getElementById("popup");
        const backdrop = document.getElementById("backdrop");

        function showPopup() {
          popup.style.display = "block";
          backdrop.style.display = "block";
          document.body.style.overflow = "hidden";
        }

        function hidePopup() {
          popup.style.display = "none";
          backdrop.style.display = "none";
          document.body.style.overflow = "auto";
        }
      </script>
</body>

</html>
