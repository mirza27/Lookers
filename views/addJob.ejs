<body>
	<!-- ======= Header ======= -->
  <header class="header fixed-top d-flex align-items-center" id="header">
    <div class="d-flex align-items-center justify-content-between">
      <a class="logo d-flex align-items-center" href="index.html"
        ><img alt="" src="/img/logo.png" />
        <span class="d-none d-lg-block">Lookers</span></a
      >
      <!-- <i class="bi bi-list toggle-sidebar-btn"></i> -->
    </div>
    <!-- End Logo -->
    <div class="search-bar">
       <form
        action="/home/search"
        class="search-form d-flex align-items-center"
        method="POST"
      >
        <input
          name="query"
          placeholder="search"
          title="Enter search keyword"
          type="text"
        />
        <button title="search" type="submit">
          <i class="bi bi-search"></i>
        </button>
      </form>
    </div>
    <!-- End Search Icon-->
    <!-- End Search Bar -->
    <div class="job-application-status">
      <a class="nav-link active" href="/home/inbox">Inbox</a>
    </div>
    <div class="job-application-status">
      <a class="nav-link active" href="/home/myJobs">My Jobs</a>
    </div>
    <div class="job-application-status">
      <a class="nav-link active" href="/home/addJobs">Add Jobs</a>
    </div>
    <nav class="header-nav ms-auto">
      <ul class="d-flex align-items-center">
        <li class="nav-item d-block d-lg-none">
          <a class="nav-link nav-icon search-bar-toggle" href=""
            ><i class="bi bi-search"></i
          ></a>
        </li>
        <li class="nav-item dropdown pe-3">
          <a
            class="nav-link nav-profile d-flex align-items-center pe-0"
            data-bs-toggle="dropdown"
            href="/home/profile"
            ><img
              alt="Profile"
              class="rounded-circle"
              src="/img/user-image-with-black-background.png"
            />
            <span class="d-none d-md-block ps-2"><%= jobs.company_name %></span></a
          >
        </li>
        <!-- End Profile Iamge Icon -->
        <!-- End Profile Nav -->
      </ul>
    </nav>
    <!-- End Icons Navigation -->
  </header><!-- End Header -->
	<div style="margin-top: 20px;"></div>
	<div class="card">
		<div class="card-body">
			<h5 class="card-title">ADD JOBS</h5><!-- General Form Elements -->
			<form method="POST">
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label" for="inputText">Tittle</label>
					<div class="col-sm-10">
						<input class="form-control" name="tittle" required="" type="text">
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label">Select</label>
					<div class="col-sm-10">
						<select aria-label="Select Category" class="form-select" name="category" required="">
							<option selected>
								Open this select menu
							</option>
							<option value="1">
								Teacher
							</option>
							<option value="2">
								Engineer
							</option>
							<option value="3">
								Chef
							</option>
							<option value="4">
								IT
							</option>
							<option value="5">
								Accountant
							</option>
						</select>
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label" for="inputPassword">Description</label>
					<div class="col-sm-10">
						<textarea class="form-control" name="desc" required="" style="height: 100px"></textarea>
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label" for="inputNumber">Salary_min</label>
					<div class="col-sm-10 d-flex">
						<input class="form-control col-sm-2" name="salary_min" required="" type="number">
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label" for="inputNumber">Salary_max</label>
					<div class="col-sm-10">
						<input class="form-control col-sm-2" name="salary_max" required="" type="number">
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label" for="inputPassword">Address</label>
					<div class="col-sm-10">
						<textarea class="form-control" name="address" required="" style="height: 100px"></textarea>
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label" for="inputNumber">Year of Experience</label>
					<div class="col-sm-10">
						<input class="form-control" name="exp" required="" type="number">
					</div>
				</div>
				<div class="row mb-3">
					<label class="col-sm-2 col-form-label">Submit Button</label>
					<div class="col-sm-10">
						<button class="btn btn-primary" type="submit">Submit Form</button>
					</div>
				</div>
			</form><!-- End General Form Elements -->
		</div>
	</div><!-- End Add Job Form -->
