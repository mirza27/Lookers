<!DOCTYPE html>
<html>

<head>
    <title>Add Job</title>
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            background: #03001c;
            color: #ffffff;
            font-size: 15px;
            line-height: 1.5;
        }

        .add-job {
            width: 90%;
            max-width: 500px;
            margin: auto;
            padding: 20px;
        }

        .add-job h1 {
            margin-bottom: 20px;
        }

        .add-job form label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
        }

        .add-job form input[type="text"],
        .add-job form textarea,
        .add-job form input[type="number"] {
            width: 100%;
            padding: 8px;
            border: none;
            border-radius: 4px;
            margin-bottom: 15px;
        }

        .add-job form select {
            width: 100%;
            padding: 8px;
            border: none;
            border-radius: 4px;
            margin-bottom: 15px;
        }

        .add-job form button {
            cursor: pointer;
            display: inline-block;
            border: 0;
            font-weight: bold;
            padding: 10px 20px;
            background: #262626;
            color: #fff;
            font-size: 15px;
        }

        .add-job form button:hover {
            opacity: 0.9;
        }
    </style>
</head>

<body>
    <div class="add-job">
        <h1>Add Job</h1>

        <form action="/home/addJob" method="POST">
            <label for="id">Id:</label>
            <input type="text" id="id" name="id" required>

            <label for="tittle">Title:</label>
            <input type="text" id="tittle" name="tittle" required>

            <label for="category">Category:</label>
            <select id="category" name="category" required>
                <option value="">Select Category</option>
                <option value="full-time">Full Time</option>
                <option value="part-time">Part Time</option>
                <option value="harian">Harian</option>
                <option value="remote">Remote</option>
            </select>

            <label for="desc">Description:</label>
            <textarea id="desc" name="desc" required></textarea>

            <label for="salary_min">Minimum Salary:</label>
            <input type="number" id="salary_min" name="salary_min" required>

            <label for="salary_max">Maximum Salary:</label>
            <input type="number" id="salary_max" name="salary_max" required>

            <label for="location">Location:</label>
            <textarea type="text" id="location" name="location" required></textarea>

            <label for="exp">Experience:</label>
            <input type="text" id="exp" name="exp" required>

            <button type="submit">Add Job</button>
        </form>
    </div>
</body>

</html>
