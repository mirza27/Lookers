    <div class="card">
        <div class="card-body">
          <h5 class="card-title">Add Job</h5>

          <!-- General Form Elements -->
          <form>
            <div class="row mb-3">
              <label for="inputText" class="col-sm-2 col-form-label">Tittle</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" name="tittle" required>
              </div>
            </div>
            <div class="row mb-3">
              <label class="col-sm-2 col-form-label">Select</label>
              <div class="col-sm-10">
                <select class="form-select" aria-label="Select Category" name="category" required>
                  <option selected>Open this select menu</option>
                  <option value="1">Teacher</option>
                  <option value="2">Engineer</option>
                  <option value="3">Chef</option>
                  <option value="4">IT</option>
                  <option value="5">Accountant</option>
                </select>
              </div>
            </div>
            <div class="row mb-3">
              <label for="inputPassword" class="col-sm-2 col-form-label">Description</label>
              <div class="col-sm-10">
                <textarea class="form-control" style="height: 100px" name="desc" required></textarea>
              </div>
            </div>
            <div class="row mb-3">
              <label for="inputNumber" class="col-sm-2 col-form-label">Salary_min</label>
              <div class="col-sm-10 d-flex">
                <input type="number" class="form-control col-sm-2" name="salary_min" required>
              </div>
            </div>
            <div class="row mb-3">
              <label for="inputNumber" class="col-sm-2 col-form-label">Salary_max</label>
              <div class="col-sm-10">
                <input type="number" class="form-control col-sm-2" name="salary_max" required>
              </div>
            </div>
            <div class="row mb-3">
              <label for="inputPassword" class="col-sm-2 col-form-label">Address</label>
              <div class="col-sm-10">
                <textarea class="form-control" style="height: 100px" name="address" required></textarea>
              </div>
            </div>
            <div class="row mb-3">
              <label for="inputNumber" class="col-sm-2 col-form-label">Year of Experience</label>
              <div class="col-sm-10">
                <input type="number" class="form-control" name="exp" required>
              </div>
            </div>
            <div class="row mb-3">
              <label class="col-sm-2 col-form-label">Submit Button</label>
              <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Submit Form</button>
              </div>
            </div>

          </form><!-- End General Form Elements -->

